<div class="row" style="margin-left:10px">
    @using (Html.BeginForm("InstructorProfile", "Instructor", FormMethod.Post))



    {
        <table class="tasble">
            @foreach (var item in Model )
            {
                <div class="temp3" style="float:left">
                    <div class="row2">
                        <div class="card2">
                            <img src="~/Content/images/profile.jpg" alt="@Html.DisplayFor(modelItem => item.InstructorPhoneNumber)" style="width:200px;height:160px; border-radius:10%">
                            <h1>@Html.DisplayFor(modelItem => item.FullName)</h1>
                            <p class="title">@Html.DisplayFor(modelItem => item.Email)</p>
                            <p>@Html.DisplayFor(modelItem => item.InstructorAbout)</p>

                            <div class="button-view-more">
                                @Html.ActionLink("View More Details", "OneInstructorProfile", "Instructor", new { id = item.Id }, null)
                            </div>


                            @*<div class="button-view-more">
                                @Html.ActionLink("Delete This User", "DeleteConfirmed", "Instructor", new { id = item.InstructorId , idea= item.Id}, null)
                            </div>*@
                        </div>
                    </div>
                </div>

            }

        </table>
    }
