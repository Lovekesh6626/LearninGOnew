@model List<LearninGO.Areas.Admin.Data.InstructorModel>

@{
    ViewBag.Title = "InstructorProfile";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}



<style>
    .temp3 {
        background-color: darkgray;
        padding: 10px;
        margin: 10px;
        width: 250px;
        height: 350px;
        border-radius: 8px;
    }


    .card2 {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        width: 90%;
        height: 80%;
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        background-color: gray;
    }

    .button5 {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        border-radius: 8px;
    }


        .button5:hover, a:hover {
            opacity: 0.7;
        }

    .button-view-more {
        padding: 8px;
        background-color: #000;
        border-radius: 8px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
    }

    .button-view-more-text {
        color: white;
    }

    .home-section .text {
        display: inline-block;
        color: #11101d;
        font-size: 15px;
        font-weight: 500;
        margin-left: 10px;
        margin-top: 80px;
</style>


