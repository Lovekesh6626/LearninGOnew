
@{
    ViewBag.Title = "CourseCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

@model IEnumerable<LearninGO.Areas.Admin.Data.AdminModel>

@{
    LearninGODatabaseProjectEntities db = new LearninGODatabaseProjectEntities();
    var List = db.Category.ToList();
}



<style>
    .temp3 {
        background-color: darkgray;
        padding: 3px;
        margin: 10px;
        width: 250px;
        height: 310px;
        border-radius: 8px;
    }


    .card2 {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        width: 90%;
        height: 100%;
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        background-color: white;
        padding-bottom:5px;
    }

    .button5 {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        border-radius: 8px;
    }


        .button5:hover, a:hover {
            opacity: 0.7;
        }

    .button-view-more {
        padding: 8px;
        background-color: #000;
        border-radius: 8px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
    }

    .button-view-more-text {
        color: white;
    }

    .home-section .text {
        display: inline-block;
        color: #11101d;
        font-size: 15px;
        font-weight: 500;
        margin-left: 10px;
        margin-top: 80px;
    }
    .btn {
        display: inline-block;
        background-color: black;
        padding: 1.2rem 4rem;
        color: #fff;
        font-weight: 600;
        text-transform: uppercase;
        margin-top: 3rem;
    }

</style>




<body style="margin-left: 0px">

    <div class="row" style="margin-left:10px">
        @using (Html.BeginForm("InstructorProfile", "Instructor", FormMethod.Post))

        {
            <table class="tasble">
                @foreach (var item in List)
                {
                    <div class="temp3" style="float:left">
                        <div class="row2">
                            <div class="card2">

                                <img src="~/Content/images/CategoryImage.jpg" alt="" style="width:200px;height:160px; border-radius:10%">
                                
                                    <h2 class="title">@Html.DisplayFor(modelItem => item.CategoryName)</h2>

                                    <a class="btn" href="/Home/Developing">Explore Now</a>

                                    @*<div class="button-view-more">
                                            @Html.ActionLink("View More Details", "OneInstructorProfile", "Instructor", new { id = item.Id }, null)
                                        </div>*@
                            </div>
                        </div>
                    </div>

                }

            </table>
        }


    </div>


    <div class="btn">
        @Html.ActionLink("Add New Category", "CreateCourseCategory")
    </div>
</body>


