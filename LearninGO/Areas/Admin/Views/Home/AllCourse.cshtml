@model IEnumerable<LearninGO.CreateCourse>

@{
    ViewBag.Title = "AllCourse";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    LearninGODatabaseProjectEntities db = new LearninGODatabaseProjectEntities();
    var List = db.CreateCourse.ToList();
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">

    <!-- Box icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />

    <!-- Custom StyleSheet -->
    <link rel="stylesheet" href="./css/styles.css" />
    <title>Courses </title>
</head>

<body>
    <!-- Navigation -->
    <!-- All Products -->
    <section class="section all-products" id="products">
        <div class="top container">
            <h1>All Products</h1>
            <form>
                <select>
                    <option value="1">Defualt Sorting</option>
                    <option value="2">Sort By Price</option>
                    <option value="3">Sort By Popularity</option>
                    <option value="4">Sort By Sale</option>
                    <option value="5">Sort By Rating</option>
                </select>
                <span><i class='bx bx-chevron-down'></i></span>
            </form>
        </div>
        <div class="product-center container">
            @foreach (var item in List)
            {

                <div class="product">
                    <div class="product-header">
                        <img src="~/Content/images/Digital-Marketing.jpg" alt="">
                        <ul class="icons">
                            <span><i class="bx bx-heart"></i></span>
                            <a href="Cart/Home">
                                <span><i class="bx bx-shopping-bag"></i></span>
                            </a>
                            <span><i class="bx bx-search"></i></span>
                        </ul>
                    </div>
                    <div class="product-footer">
                        <a href="EthicalHackingDetails">

                            <h3>@Html.ActionLink("Click Here", "CourseDetails", "Home", new { id = item.CourseId }, null) </h3>
                            <h3> @Html.DisplayFor(modelItem => item.CourseTitle) </h3>
                        </a>
                        <div class="rating">
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bx-star"></i>
                        </div>
                        <h4 class="price"> @Html.DisplayFor(modelItem => item.CourseLevel)</h4>
                    </div>
                </div>



            }
        </div>
    </section>

    <section class="pagination">
        <div class=" container">
            <span>1</span>
            <span style="background-color:green;">2</span>
            <span>3</span>
            <span>4</span>
            <span><i class='bx bx-right-arrow-alt'></i></span>
        </div>
    </section>



    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
    <!-- Custom Script -->
    <script src="./js/index.js"></script>
</body>

</html>



